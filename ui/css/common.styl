.njsFloatLeft {
	float: left !important;
}
.njsHidden {
	display: none !important;
}
.njsPad10 {
	padding-left: 5px;
	padding-right: 5px;
}
.njsTransition750ms{
	//transition: transform 750ms cubic-bezier(1, 0, .30, .53) 0, opacity 750ms cubic-bezier(0, .53, 1, .17) 0;
	//transition: 750ms ease-in-out left;
	transition: left 750ms cubic-bezier(1, 0, .30, .53) 0, opacity 750ms cubic-bezier(1, 0, .30, .53) 0;
	position: absolute;
	display: none;
	opacity: 0;
}
.njsTransitionPanelContainer {
	overflow: hidden;
	width: 100%;
	position: relative;
	> {
		&.njsTransitionActive {
			left: 0;
			opacity: 1;
			display: block;
			&.njsTransitionLeft {
				left: -100%;
			}
			&.njsTransitionRight {
				left: 100%;
			}
		}
		&.njsTransitionRight {
			left: 100%;
		}
		&.njsTransitionLeft {
			left: -100%;
		}
		&.njsTransitionNext {
			display: block;
			position: absolute;
			top: 0;
			width: 100%;
			left: 100%;
			&.njsTransitionLeft {
				left: 0;
			}
		}
		&.njsTransitionPrev {
			display: block;
			position: absolute;
			top: 0;
			width: 100%;
			left: -100%;
			&.njsTransitionRight {
				left: 0;
			}
		}
	}
}
.njsWaiting {
	&>:not(*.njsWaitNode) {
		display: none;
	}
	.njsWaitNode {
		width: 100% !important;
		height: 100% !important;
		display: block !important;
		opacity: 1 !important;
		position: absolute;
		background-repeat: no-repeat;
	}
}
.cursor-pointer {
	cursor: pointer;
}