{
  "compilerOptions": {
    "module": "umd",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": false,
    "target": "es5",
    "isolatedModules": false,
    "moduleResolution": "node",
    "declaration": false,
    "lib": [ "es2015", "dom" ],
    "typeRoots": ["node_modules/@types"],
    "types": []
  },
  "include": [
    "**/*.ts"


  ],
  "exclude": [
    "node_modules",
    "typings",
    "**/*.d.ts"
  ]
}